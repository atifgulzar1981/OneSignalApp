@model LoginInput

@{
  ViewData["Title"] = "Login";
}

<div class="row">
  <div class="col-md-12">
    <h1>@ViewData["Title"]</h1>
  </div>
</div>

<form asp-controller="Account" asp-action="Login" method="post">
  <div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="Email"/>
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input asp-for="Password" class="form-control" placeholder="Password" type="password"/>
    </div>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-controller="Account" asp-action="Register">Register</a>
  </div>
</form>