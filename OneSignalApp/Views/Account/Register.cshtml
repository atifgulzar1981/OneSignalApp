@model User

@{
  ViewData["Title"] = "Register";
}

<form asp-controller="Account" asp-action="Register" method="post">
  <div class="row">
    <div class="col-md-10">
      <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-2">
      <a class="btn btn-link" asp-area="" asp-controller="Account" asp-action="Login">Back To Login</a>
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="FullName" class="col-sm-2 col-form-label">Full Name</label>
    <div class="col-sm-10">
      <input asp-for="FullName" class="form-control" placeholder="Full Name"/>
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="Email" type="email"/>
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input asp-for="Password" class="form-control" placeholder="Password" type="password"/>
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="UserType" class="col-sm-2 col-form-label">User Type</label>
    <div class="col-sm-10">
      <select asp-for="UserType" class="form-control">
        <option value="@UserType.Admin">Admin</option>
        <option value="@UserType.DataEntryOperator">DataEntryOperator</option>
      </select>
    </div>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>